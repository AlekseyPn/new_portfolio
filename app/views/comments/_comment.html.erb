<div class="comment-card">
  <div class="card mt-3">
    <div class="p-3">
      <div class="row">
        <%# blockquote for message for semantic html %>
        <div class="col-md-2">            
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-10">
          <div>
            <%= comment.content %>
          </div>
          <div class="comment-attribution">
            Comment posted by&nbsp;<span class="comment-name"><%= comment.user.first_name %></span>&nbsp;<%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
          </div>
        </div>
      </div>
    </div>
  </div>    
</div>