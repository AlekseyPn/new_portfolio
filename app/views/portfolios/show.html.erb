<main  role="main" class="portfolio-container">
  <section class="container">
    <div class="row">
      <div class="col-md-7">
        <%= image_tag portfolio_img(@portfolio_item.main_image.url, "main"), size: '600x400', alt: 'Portfolio preview' %>
      </div>
      <div class="col-md-5">
        <h1><%= @portfolio_item.title %></h1>

        <em><%= @portfolio_item.subtitle %></em>

        <p><%= @portfolio_item.body %></p>

        <%= '<h2>Technologies Used:</h2>'.html_safe if @portfolio_item.technologies.any? %>
        <% @portfolio_item.technologies.each do |t| %>
          <p><%= t.name %></p>
        <% end %>
        <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to 'Edit item', edit_portfolio_path(@portfolio_item), class: "btn btn-warning" %>
        </div>
        <% end %>
      </div>
    </div>
  </section>
</main>